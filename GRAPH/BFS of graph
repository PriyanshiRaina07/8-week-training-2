class Solution {
    public ArrayList<Integer> bfs(ArrayList<ArrayList<Integer>> adj) {
        // code here
        int Vertex = adj.size();
        ArrayList<Integer>ans = new ArrayList<>();
        boolean[] visited = new boolean[Vertex];
        Queue<Integer>q = new LinkedList<>();
        
        visited[0] = true;
        q.offer(0);
        
        while(!q.isEmpty()){
            int node = q.poll();
            ans.add(node);
            
            for(int neighbour:adj.get(node)){       //find neighbour 
                if(!visited[neighbour]){                //now false 
                    visited[neighbour] = true;
                    q.offer(neighbour);
                }
            }
        }
        return ans;
        
    }
}

//for loop will be added in main for disconnected 
